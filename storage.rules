
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Payment method logos are public to read for anyone.
    match /payment-method-logos/{allPaths=**} {
      allow read;
      // Only authenticated admins can upload/write/delete logos.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Future-proofing for user avatars if needed.
    // match /user-avatars/{userId}/{allPaths=**} {
    //   allow read;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
