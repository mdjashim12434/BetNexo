
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/update their own document and create it upon signup.
    // Admins can read any user document.
    match /users/{userId} {
      allow create, update, read: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Authenticated users can read payment methods.
    // Admins can create, update, and delete payment methods.
    match /paymentMethods/{methodId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // Users can create transactions for themselves.
    // Admins can read all transactions and update them (e.g., approve/reject).
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Users can create bets for themselves.
    // Admins and owners can read bets.
    match /bets/{betId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow read: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');
    }
  }
}
