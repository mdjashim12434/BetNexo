rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users Collection Rules
    match /users/{userId} {
      // A user can read or update their own document. Admins can do anything.
      allow read, update: if request.auth.uid == userId;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Transactions Collection Rules
    match /transactions/{transactionId} {
      // User can create a transaction for themselves.
      allow create: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
      // Admins can read/update any transaction (for approvals).
      allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Bets Collection Rules
    match /bets/{betId} {
      // User can create a bet for themselves.
      allow create: if request.auth.uid != null && request.resource.data.userId == request.auth.uid;
      // User can read their own bets. Admins can read any bet.
      allow read: if (request.auth.uid != null && resource.data.userId == request.auth.uid) ||
                   (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');
    }
    
    // Payment Methods Collection Rules
    match /paymentMethods/{methodId} {
      // Any authenticated user can read payment methods.
      allow read: if request.auth.uid != null;
      // Only admins can write payment methods.
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
